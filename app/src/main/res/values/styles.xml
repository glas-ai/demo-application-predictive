<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimaryDark">@color/blue_data</item>
        <item name="colorAccent">@color/teal_200</item>
    </style>

    <style name="DemoActivityTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">23sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">23sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="HeaderTitle" parent="DemoActivityTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">20sp</item>
    </style>

</resources>